<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_shake_map_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <ProgressBar
                android:id="@+id/progress_bar_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_bar_image"
                tools:text="Downloading image..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_gempa_magnitude_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_gempa_kedalaman_detail"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_container"
            tools:text="@string/gempa_magnitude" />

        <TextView
            android:id="@+id/tv_magnitude_label_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnitude"
            app:layout_constraintEnd_toEndOf="@id/tv_gempa_magnitude_detail"
            app:layout_constraintStart_toStartOf="@id/tv_gempa_magnitude_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_gempa_magnitude_detail" />

        <TextView
            android:id="@+id/tv_gempa_kedalaman_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_gempa_lintang_detail"
            app:layout_constraintStart_toEndOf="@+id/tv_gempa_magnitude_detail"
            app:layout_constraintTop_toTopOf="@id/tv_gempa_magnitude_detail"
            tools:text="@string/gempa_kedalaman" />

        <TextView
            android:id="@+id/tv_kedalaman_label_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kedalaman"
            app:layout_constraintEnd_toEndOf="@id/tv_gempa_kedalaman_detail"
            app:layout_constraintStart_toStartOf="@id/tv_gempa_kedalaman_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_gempa_kedalaman_detail" />

        <TextView
            android:id="@+id/tv_gempa_lintang_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_gempa_kedalaman_detail"
            app:layout_constraintTop_toTopOf="@id/tv_gempa_magnitude_detail"
            tools:text="@string/gempa_lintang" />

        <TextView
            android:id="@+id/tv_gempa_bujur_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tv_gempa_lintang_detail"
            app:layout_constraintStart_toStartOf="@id/tv_gempa_lintang_detail"
            app:layout_constraintTop_toBottomOf="@id/tv_gempa_lintang_detail"
            tools:text="@string/gempa_bujur" />

        <TextView
            android:id="@+id/tv_waktu_label_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Waktu"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_magnitude_label_detail" />

        <TextView
            android:id="@+id/tv_gempa_datetime_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_waktu_label_detail"
            tools:text="@string/gempa_datetime" />

        <TextView
            android:id="@+id/tv_wilayah_label_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Wilayah dirasakan (Skala MMI)"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gempa_datetime_detail" />

        <TextView
            android:id="@+id/tv_gempa_mmi_dirasakan_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wilayah_label_detail"
            tools:text="@string/gempa_mmi_dirasakan" />

        <TextView
            android:id="@+id/tv_lokasi_label_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Lokasi gempa"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_gempa_mmi_dirasakan_detail" />

        <TextView
            android:id="@+id/tv_gempa_wilayah_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_lokasi_label_detail"
            tools:text="@string/gempa_wilayah" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>